builddir = build/macos
luamake = luamake
bin = $builddir/bin
obj = $builddir/obj
rule command
  command = $COMMAND
  description = $DESC
build $builddir/_/bee: command
  COMMAND = cd 3rd/bee.lua && ninja -f build/macos/make.ninja
build $builddir/_/copy_bee_1: command | $builddir/_/bee
  COMMAND = cp 3rd/bee.lua/bin/macos_release/bootstrap luamake
build $builddir/_/copy_bee_2: command | $builddir/_/bee
  COMMAND = cp 3rd/bee.lua/bin/macos_release/bee.so bee.so
